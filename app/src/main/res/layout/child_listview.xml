<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/child_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/childtexttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/child_item_icon"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Child TextView"
            android:textSize="18dp"
            android:textColor="#DD000000" />

        <TextView
            android:id="@+id/childtextaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/child_item_icon"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Child TextView"
            android:textColor="#AA111110" />
        <TextView
            android:autoLink="phone"
            android:id="@+id/childtextcall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/child_item_icon"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Child TextView"
            android:textColor="#88000000" />
    </LinearLayout>

</LinearLayout>


