<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/course_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:cropToPadding="true"
                android:padding="1dp"
                android:src="@drawable/default_img"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_best">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text="눈치코칭 추천 코스!"
                        android:textColor="#ffffff"/>
               </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#70000000">

                    <TextView
                        android:id="@+id/course_subject"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="코스 제목"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:lines="2"
                        android:textColor="#ffffff"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#70000000">

                    <TextView
                        android:id="@+id/course_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="코스의 설명을 적는다."
                        android:textColor="#ffffff"/>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="추천 코스"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/course_detail_inside"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:justifyContent="space_around"
                app:alignItems="center"
                app:flexDirection="row"
                app:flexWrap="nowrap"
                app:dividerDrawableVertical="@drawable/navi_border">

            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>